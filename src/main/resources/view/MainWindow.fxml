<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatty.ui.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="557.0" prefWidth="400.0" vbarPolicy="ALWAYS" vvalue="1.0">
            <content>
                <VBox fx:id="dialogContainer" fillWidth="true" prefWidth="388.0" spacing="10.0" />
            </content>
        </ScrollPane>

        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="41.0" prefWidth="324.0" promptText="Input" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="1.0" />

        <Button fx:id="sendButton" onAction="#handleUserInput" prefHeight="41.0" prefWidth="70.0" text="Send" AnchorPane.bottomAnchor="2.0" AnchorPane.rightAnchor="2.0" />
    </children>

    <padding>
        <Insets topRightBottomLeft="1" />
    </padding>
</AnchorPane>
